    main.container
        .container_base
            .workspace
                h1.workspace_header
                    span.workspace_title Генератор водяных знаков
                .workspace_board
                    .image-container
                        .watermark-container
        .container_side
            .control
                .control_title Настройки
                .control_block
                    .uploader-block
                        .uploader-block_label Исходное изображение
                        label.uploader
                            .uploader_field Изображение отсутствует
                            a.uploader_button
                            input.uploader_input(type="file" data-upload-type="image" name="image")
                    .uploader-block.locked-block
                        .uploader-block_label Водяной знак
                        label.uploader
                            .uploader_field Изображение отсутствует
                            a.uploader_button
                            input.uploader_input(type="file" data-upload-type="watermark" name="watermark")
                .control_block
                    .control_container.locked-block
                        .control_header
                            .switcher.js-switcher
                                a.switcher_item.icon_switch-single.switcher_item--active(data-mode="single" href="")
                                a.switcher_item.icon_switch-mode(data-mode="tiling" href="")
                            .control_block-title Положение
                        .position
                            .position_block
                                include _sector
                            .position_block
                                .position_spinner
                                    .spinner
                                        .spinner_axis X
                                        input.spinner_input.js-spinner-x
                                .position_spinner
                                    .spinner
                                        .spinner_axis Y
                                        input.spinner_input.js-spinner-y 
                .control_block
                    .control_container.locked-block
                        .control_block-title Прозрачность
                        include _range
                .control_button-group.locked-block
                    button.control_button-reset.js-reset Сброс
                    button.control_button-download.js-download Скачать

    include _aside-wrapper
    //include _demo-control
    include _footer
    include _scripts